source @CMAKE_BINARY_DIR@/fairroot_config.sh

#If WITH_GENIE is was to ON during cmake
if [ "@WITH_GENIE@" = "ON" ]; then
	export GENIE=@GENIE_DIR@
	export PATH=$GENIE/bin:$PATH
	export LD_LIBRARY_PATH=@GENIE_LIB_DIR@:$LD_LIBRARY_PATH
	export LHAPATH=$GENIE/data/evgen/pdfs
fi 

#If WITH_GENFIT was set ON during cmake
if [ "@WITH_GENFIT@" = "ON" ]; then
	export LD_LIBRARY_PATH=@GENFIT_LIBRARY_DIR@:$LD_LIBRARY_PATH
	export LD_LIBRARY_PATH=@GENFIT_LIBRARY_DIR@/lib:$LD_LIBRARY_PATH

	# Add all prerequisites to build Genfit and Pathfinder
	source @PROJECT_SOURCE_DIR@/EsbGeometry/EsbSuperFGD/EsbConfig/envs
fi
